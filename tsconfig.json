{
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",
    "baseUrl": "./src/",
    "paths": {
      "@components/*": ["components/*"],
      "@storybook/*": ["storybook/*"],
      "@pages/*": ["pages/*"],
      "@layout/*": ["layout/*"],
      "@styles/*": ["styles/*"],
      "@store/*": ["store/*"],
      "@store": ["store"],
      "@sagas/*": ["sagas/*"],
      "@lib/*": ["lib/*"],
      "@hooks/*": ["hooks/*"]
    }
  },
  "include": ["src"]
}
